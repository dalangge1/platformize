{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "target": "es2017"
  },
  "exclude": [
    "dist",
    "dist-cli",
    "node_modules",
    "test/types",
    "examples/**/*.js",
    "examples/three-wechat-simple/miniprogram/app.js",
    "examples/three-wechat/miniprogram/app.js"
  ]
}
