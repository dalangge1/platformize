{
  "name": "platformize",
  "version": "1.0.3",
  "description": "platformize 通用构建插件和基础 API 适配, 可单独使用",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "sideEffects": false,
  "scripts": {
    "build:watch": "pnpm run build:file",
    "build:type": "concurrently \"tsc --project ./tsconfig.json --emitDeclarationOnly || exit 0\" \"tsc --project ./tsconfig.plugin.json --emitDeclarationOnly || exit 0\"",
    "build:file": "concurrently \"swc plugin -d dist-plugin -C module.type=commonjs --strip-leading-paths\" \"swc src -d dist --strip-leading-paths\"",
    "build": "concurrently \"pnpm run build:type\" \"pnpm run build:file\"",
    "test": "ava"
  },
  "files": [
    "README.md",
    "dist",
    "dist-plugin"
  ],
  "keywords": [],
  "author": "DeepKolos<deepkolos@qq.com>",
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-sucrase": "^3.1.0",
    "@rollup/pluginutils": "^4.1.1",
    "deepmerge": "^4.2.2",
    "estree-walker": "2.0.1",
    "magic-string": "^0.25.7",
    "rollup": "^2.60.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "regenerator-runtime": "~0.13.9"
  },
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@types/wechat-miniprogram": "^3.4.8",
    "@types/offscreencanvas": "*",
    "minigame-api-typings": "^3.8.7",
    "ava": "^3.15.0",
    "@ava/babel": "2.0.0",
    "typescript": "*"
  }
}
